{
    "name": "Gleam Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "gleam.gleam",
                "ms-vscode.live-server",
                "eamodio.gitlens",
                "github.vscode-github-actions",
                "openai.chatgpt"
